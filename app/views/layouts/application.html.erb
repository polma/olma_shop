<!DOCTYPE html>
<html>
<head>
  <title>OlmaShop</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="padding-top:40px;">
  <div class="fluid-container">
    <div class="navbar navbar-fixed-top">  
      <div class="navbar-inner">  
        <a class="brand" href="#">Feminity</a>
          <ul class="nav">
            <li class="active"><a href="#" onclick="useCase.showMain()">Strona główna</a></li>
            <li><a href="#" onclick="useCase.showTerms()">Regulamin</a></li>
            <li><a href="#" onclick="useCase.showContact()">Kontakt</a></li>
          </ul>
        <form id="search-form" class="navbar-search pull-right">
          <input id="search-text" type="text" class="search-query" placeholder="Search">
        </form>
      </div>  
    </div>
    <div class="row-fluid" style="margin-bottom:35px">
      <div style="background-color:black; text-align:center" class="span12">
        <img src="assets/feminity-scaled.png" height="100px" />
      </div>
    </div>
    <div id="alert">
    </div>
    <div class="row-fluid" style="margin-bottom:10px">
      <div class="span2"> </div>
      <div id="cart-container" class="span10"></div>
    </div>
    <div class="row-fluid">
      <div class="span2">
          <div class=" sidebar-nav">
            <ul id="categories-nav" class="nav nav-list">
              <li class="nav-header">Kategorie</li>
              <!--- category list -->
            </ul>
          </div>
      </div>
      <div id="main-content" class="span9">
      </div>
    </div>
  </div>
</body>
</html>
<%= yield %>

<script>
  $("#search-form").submit(function(){
    return false;
  });
  $("#search-text").keyup(function(){
    useCase.searchForProducts($("#search-text").val())
  });
</script>
